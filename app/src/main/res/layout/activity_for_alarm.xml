<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_for_alarm"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ashutosh.iiitd.mymedicine.Activity_for_alarm">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="time"
        android:layout_centerHorizontal="true"
        android:textSize="40dp"
        android:textColor="#5d7ed9"
        android:textAllCaps="true"
        android:id="@+id/tv_current_time"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="date"
        android:layout_centerHorizontal="true"
        android:textAllCaps="true"
        android:textColor="#5d7ed9"
        android:id="@+id/tv_todays_date"
        android:layout_below="@+id/tv_current_time" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/img_mymedicine"
        android:layout_below="@+id/tv_todays_date"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="medicines"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="#5d7ed9"
        android:id="@+id/tv_medicine_details"
        android:layout_below="@+id/img_mymedicine" />

    <com.ashutosh.iiitd.mymedicine.SwipeButton
        android:id="@+id/snooze_twenty"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Snooze for 20 minutes"
        android:background="#5d7ed9"
        android:textColor="#ffffff"
        android:layout_below="@+id/tv_medicine_details"
        android:layout_alignParentStart="true"
        android:layout_marginTop="190dp" />

    <com.ashutosh.iiitd.mymedicine.SwipeButton
        android:id="@+id/snooze_ten"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Snooze for 10 minutes"
        android:layout_below="@id/snooze_twenty"
        android:layout_centerVertical="true"
        android:layout_marginTop="20dp"
        android:background="#5d7ed9"
        android:textColor="#ffffff"
        />

    <com.ashutosh.iiitd.mymedicine.SwipeButton
        android:id="@+id/done"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Taken Medicine"
        android:layout_marginTop="20dp"
        android:layout_below="@id/snooze_ten"
        android:layout_centerVertical="true"
        android:background="#5d7ed9"
        android:textColor="#ffffff"
        />
</RelativeLayout>
